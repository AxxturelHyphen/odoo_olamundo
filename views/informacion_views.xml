<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- TREE VIEW -->
        <record id="view_informacion_tree" model="ir.ui.view">
            <field name="name">informacion.tree</field>
            <field name="model">odoo_olamundo.informacion</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="autorizado"/>
                    <field name="sexo_traducido"/>
                    <field name="alto_en_cms"/>
                    <field name="ancho_en_cms"/>
                    <field name="longo_en_cms"/>
                    <field name="peso"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="view_informacion_form" model="ir.ui.view">
            <field name="name">informacion.form</field>
            <field name="model">odoo_olamundo.informacion</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="descripcion"/>
                                <field name="autorizado"/>
                                <field name="sexo_traducido"/>
                                <field name="alto_en_cms"/>
                                <field name="ancho_en_cms"/>
                                <field name="longo_en_cms"/>
                                <field name="peso"/>
                            </group>
                            <group>
                                <field name="foto" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_informacion" model="ir.actions.act_window">
            <field name="name">Informaci√≥n</field>
            <field name="res_model">odoo_olamundo.informacion</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
