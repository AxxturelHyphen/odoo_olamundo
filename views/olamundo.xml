<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- VISTA TREE -->
    <record id="view_olamundo_tree" model="ir.ui.view">
        <field name="name">olamundo.tree</field>
        <field name="model">odoo_olamundo.olamundo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <!-- VISTA FORM -->
    <record id="view_olamundo_form" model="ir.ui.view">
        <field name="name">olamundo.form</field>
        <field name="model">odoo_olamundo.olamundo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
